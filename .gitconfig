[user]
	name = David Corvoysier
	email = david.corvoysier@gmail.com
[core]
	deltaBaseCacheLimit = 1G
	excludesfile = ~/.gitignore
[http]
	sslverify = true
[color]
	ui = true
[alias]
	glog = log --pretty=oneline --abbrev-commit
	graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
[sendemail]
	from = David Corvoysier <david.corvoysier@gmail.com>
	smtpserver = smtp.gmail.com
	smtpserverport = 587
	smtpuser = david.corvoysier@gmail.com
	smtpencryption = tls
	suppresscc = self
	confirm = auto
	chainreplyto = false
[credential]
	helper = cache --timeout=3600
[pull]
	ff = only
[init]
	defaultBranch = main
